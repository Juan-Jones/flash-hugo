{{ $.Scratch.Add "index" slice }}

{{ range site.RegularPages }}
  {{ $date := .PublishDate.Format ":date_long" }}
  
  {{ with .Params.image }}
    {{ $imagePath := (printf "assets/%s" .) }}
    {{ if (fileExists $imagePath) }}
      {{ $imageResource := resources.Get . }}
      {{ $resizedImage := $imageResource.Resize "650x" }}
      {{ $.Scratch.Set "image" $resizedImage.Permalink }}
    {{ else }}
      {{ $.Scratch.Set "image" nil }}
    {{ end }}
  {{ else }}
    {{ $.Scratch.Set "image" nil }}
  {{ end }}

  {{ $image := $.Scratch.Get "image" }}

  {{ $.Scratch.Add "index" (dict 
    "title" .Title 
    "date" $date 
    "image" $image 
    "categories" (delimit .Params.categories ", ")
    "contents" .Plain 
  
